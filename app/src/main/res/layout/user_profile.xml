<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/image_signup_icon"
        android:layout_width="111dp"
        android:layout_height="97dp"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="140dp"
        app:srcCompat="@drawable/signup_icon" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_signup_icon"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="User Profile"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_username"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="30dp"
        android:hint="Username" />

    <TextView
        android:id="@+id/display_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/text_username"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView"
        />

    <TextView
        android:id="@+id/text_address"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_username"
        android:layout_marginTop="30dp"
        android:hint="Address" />

    <TextView
        android:id="@+id/display_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/text_address"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/display_username"
        />

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:layout_marginTop="30dp"
        android:layout_below="@id/text_address"/>

    <Button
        android:id="@+id/btn_backHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to home"
        android:layout_marginTop="30dp"
        android:layout_below="@id/btn_edit"/>

</RelativeLayout>